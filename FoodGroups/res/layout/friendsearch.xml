<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="fill_parent" android:orientation="vertical" android:layout_width="fill_parent" android:id="@+id/linearLayout1">
        <TextView android:text="TextView" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
        <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout2" android:layout_height="wrap_content">
            <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="10" android:id="@+id/friendsearch_textfield"></EditText>
            <Button android:text="Button" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="30" android:id="@+id/friendsearchsearch_button"></Button>
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout3" android:layout_height="wrap_content">
            <Button android:text="@string/back" android:layout_width="wrap_content" android:id="@+id/friendsearchback_button" android:layout_height="wrap_content"></Button>
            <Button android:layout_width="wrap_content" android:id="@+id/friendsearchdone_button" android:layout_height="wrap_content" android:text="@string/done"></Button>
        </LinearLayout>
    </LinearLayout>
